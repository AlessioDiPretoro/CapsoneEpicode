@model IEnumerable<Stones.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Categoria
        </th>
        <th>
            Soggetto
        </th>
        <th>
            Nome
        </th>
        <th>
            Prezzo
        </th>
        <th>
            Descrizione
        </th>
        <th>
            @Html.DisplayNameFor(model => model.photo1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.photo2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.photo3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.photo4)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.photo5)
        </th>
        <th>Modifica</th>
    </tr>

    @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductCategory.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductSubject.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripton)
        </td>
        <td>
            <img class="img-table" src="~/Content//imgProducts/@item.photo1" />
        </td>
        <td>
            <img class="img-table" src="~/Content//imgProducts/@item.photo2" />
        </td>
        <td>
            <img class="img-table" src="~/Content//imgProducts/@item.photo3" />
        </td>
        <td>
            <img class="img-table" src="~/Content//imgProducts/@item.photo4" />
        </td>
        <td>
            <img class="img-table" src="~/Content//imgProducts/@item.photo5" />
        </td>
        <td>
            @Html.ActionLink("🔍", "Details", new { id=item.id }, new { @class = "btn btn-success" })
            @Html.ActionLink("✒", "Edit", new { id=item.id}, new { @class = "btn btn-warning" })
            @Html.ActionLink("🗑", "Delete", new { id=item.id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}
</table>