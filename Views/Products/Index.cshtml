@model IEnumerable<Stones.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Gestisci le tue Creazioni</h2>

<p>
    @Html.ActionLink("Crea nuovo capolavoro", "Create", "", new { @class = "btn btn-outline-secondary" })
</p>
<div class="table-responsive">
    <table class="table">
        <tr>
            <th class="text-center w5"><i class="fa-solid fa-gear"></i></th>
            <th>
                Materiale
            </th>
            <th>
                Soggetto
            </th>
            <th>
                Titolo
            </th>
            <th>
                Prezzo
            </th>
            <th>
                Descrizione
            </th>
            <th>
                Disp
            </th>
            <th>
                Foto1
            </th>
            <th>
                Foto2
            </th>
            <th>
                Foto3
            </th>
            <th>
                Foto4
            </th>
            <th>
                Foto5
            </th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a class="nav-link text-center" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        ...
                    </a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("🔍", "Details", new { id = item.id }, new { @class = "btn btn-sm btn-success w-75 m-1" })</li>
                        <li>@Html.ActionLink("✒", "Edit", new { id = item.id }, new { @class = "btn btn-sm btn-warning w-75 m-1" })</li>
                        <li>@Html.ActionLink("🗑", "Delete", new { id = item.id }, new { @class = "btn btn-sm btn-danger w-75 m-1" })</li>
                    </ul>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductCategory.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductSubject.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.descripton)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isAvaiable)
                </td>

                <td>
                    @if (item.photo1 != null)
                    {
                        <img class="img-table" src="~/Content//imgProducts/@item.photo1" />
                    }
                </td>

                <td>
                    @if (item.photo2 != null)
                    {
                        <img class="img-table" src="~/Content//imgProducts/@item.photo2" />
                    }
                </td>
                <td>
                    @if (item.photo3 != null)
                    {
                        <img class="img-table" src="~/Content//imgProducts/@item.photo3" />
                    }
                </td>
                <td>
                    @if (item.photo4 != null)
                    {
                        <img class="img-table" src="~/Content//imgProducts/@item.photo4" />
                    }
                </td>
                <td>
                    @if (item.photo5 != null)
                    {
                        <img class="img-table" src="~/Content//imgProducts/@item.photo5" />
                    }
                </td>
            </tr>
        }
    </table>
    </div>