@model IEnumerable<Stones.Models.PostResponse>

@{
    ViewBag.Title = "Index";
}

<h2>Gestione di tutte le risposte ai post</h2>

<p>
    @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-outline-secondary" })
</p>
<div class="table-responsive">
    <table class="table">
        <tr>
            <th class="text-center w5"><i class="fa-solid fa-gear"></i></th>
            <th>
                @Html.DisplayNameFor(model => model.Post.body)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.body)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idUser)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a class="nav-link text-center" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        ...
                    </a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("🔍", "Details", new { id = item.id }, new { @class = "btn btn-sm btn-success w-75 m-1" })</li>
                        <li>@Html.ActionLink("✒", "Edit", new { id = item.id }, new { @class = "btn btn-sm btn-warning w-75 m-1" })</li>
                        <li>@Html.ActionLink("🗑", "Delete", new { id = item.id }, new { @class = "btn btn-sm btn-danger w-75 m-1" })</li>
                    </ul>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Post.body)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.body)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.idUser)
                </td>
            </tr>
        }

    </table>
</div>