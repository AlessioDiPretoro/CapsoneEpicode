@model IEnumerable<Stones.Models.ProductSubject>

@{
    ViewBag.Title = "Index";
}

<h2>Gestisci i soggetti delle creazioni</h2>

<p>
    @Html.ActionLink("Crea nuovo soggetto", "Create", "", new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th class="text-center w5"><i class="fa-solid fa-gear"></i></th>
        <th>
            Nome
        </th>
        <th>
            Descrizione
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="d-flex flex-column gap-3">
            @Html.ActionLink("🔍", "Details", new { id = item.id }, new { @class = "btn btn-success" })
            @Html.ActionLink("✒", "Edit", new { id = item.id }, new { @class = "btn btn-warning" })
            @Html.ActionLink("🗑", "Delete", new { id = item.id }, new { @class = "btn btn-danger" })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>

    </tr>
}

</table>
