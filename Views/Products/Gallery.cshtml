@model IEnumerable<Stones.Models.Product>

@{
    ViewBag.Title = "Gallery";
}

<div>
    <h2>Galleria</h2>
    <div class="row mb-3">
        <div class="col-12 col-md-2 mb-3">
            @using (Html.BeginForm())
            {
                <p>Filtra per materiali</p>

                foreach (SelectListItem i in ViewBag.idCategory)
                {
                    <div>
                        <input type="checkbox" name="category" value="@i.Value" /> @i.Text
                    </div>
                }
                <hr />
                <p>Filtra per soggetti</p>
                foreach (SelectListItem i in ViewBag.idSubject)
                {
                    <div>
                        <input type="checkbox" name="subject" value="@i.Value" /> @i.Text
                    </div>
                }
                <hr />
                <input type="submit" value="Applica filtri" class="btn btn-default" />
            }
        </div>
        <div class="col-12 col-md-10">

            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-2 gap-4 justify-content-center galleryCont">

                @foreach (Stones.Models.Product p in Model)
                {
                    <div class="card galleryCard" style="width: 25rem;">
                        <a href="@Url.Action("Details", "Products", new { id = p.id })">
                            <img src="~/Content/imgProducts/@p.photo1" class="card-img-top" alt="@p.name">
                        </a>
                        <div class="card-body d-flex flex-column card-abs">
                            <div class="d-flex justify-content-between">

                                <h5 class="card-title card-text-cutter">@p.name</h5>
                                @if (p.isAvaiable)
                                {

                                <h5 class="card-title text-nowrap">@p.price.ToString("C2")</h5>
                                }
                                else
                                {
                                <h5 class="card-title text-nowrap text-decoration-line-through">@p.price.ToString("C2")</h5>

                                }
                            </div>
                            <p class="card-text card-text-cutter flex-grow-1">@p.descripton</p>
                            @*@Html.ActionLink("Dettagli", "Details", "Products", new { id = p.id }, new { @class = "btn btn-default" })*@
                            @*@Html.ActionLink("Commenta", "Create", "Posts", new { id = p.id }, new { @class = "btn btn-default" })*@
                        </div>
                    </div>
                }
            </div>

        @if (ViewBag.NoResults != null)
        {
            <div><p class="text-center">@ViewBag.NoResults</p></div>
        }
        </div>
    </div>
</div>