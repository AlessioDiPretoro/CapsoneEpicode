@model IEnumerable<Stones.Models.AuctionsProducts>

@{
    ViewBag.Title = "Index";
}

<h2>Gestisci le aste</h2>

<p>
    @Html.ActionLink("Aggiungi nuova asta", "Create", "", new { @class = "btn btn-default" })
</p>
<div class="table-responsive">
    <table class="table">
        <tr>
            <th class="text-center w5"><i class="fa-solid fa-gear"></i></th>
            <th>
                Nome
            </th>
            <th>
                Vincitore
            </th>
            <th>
                Inizio
            </th>
            <th>
                Scadenza
            </th>
            <th>
                €Iniz
            </th>
            <th>
                Attiva
            </th>
            <th>
                Pagata
            </th>
            <th>
                €Chius
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="d-flex flex-column gap-3">
                    @Html.ActionLink("🔍", "Details", new { id = item.id }, new { @class = "btn btn-sm btn-success" })
                    @Html.ActionLink("✒", "Edit", new { id = item.id }, new { @class = "btn btn-sm btn-warning" })
                    @Html.ActionLink("🗑", "Delete", new { id = item.id }, new { @class = "btn btn-sm btn-danger" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Users.username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dataStart)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dataEnd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.startPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isPayed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.endPrice)
                </td>

            </tr>
        }

    </table>
    </div>
