@model IEnumerable<Stones.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Gestisci le tue Creazioni</h2>

<p>
    @Html.ActionLink("Crea nuovo capolavoro", "Create", "", new { @class = "btn btn-outline-secondary" })
</p>
<div class="table-responsive">
    <table class="table">
        <tr>
            <th class="text-center w5"><i class="fa-solid fa-gear"></i></th>
            <th>
                Materiale
            </th>
            <th>
                Soggetto
            </th>
            <th>
                Titolo
            </th>
            <th>
                Prezzo
            </th>
            <th>
                Descrizione
            </th>
            <th>
                Disp
            </th>
            <th class="d-none d-md-block">
                Foto
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a class="nav-link text-center" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        ...
                    </a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("🔍", "Details", new { id = item.id }, new { @class = "btn btn-sm btn-success w-75 m-1" })</li>
                        <li>@Html.ActionLink("✒", "Edit", new { id = item.id }, new { @class = "btn btn-sm btn-warning w-75 m-1" })</li>
                        <li>@Html.ActionLink("🗑", "Delete", new { id = item.id }, new { @class = "btn btn-sm btn-danger w-75 m-1" })</li>
                    </ul>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductCategory.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductSubject.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.descripton)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isAvaiable)
                </td>

                <td class="d-none d-md-block">
                    <div id="carouselIndex_@item.id" class="carousel slide">
                        <div class="carousel-inner">
                            <div class="carousel-item text-center active">
                                        <img src="~/Content/imgProducts/@item.photo1" class="img-table carImg" alt="Immagine carosello">
                            </div>
                            @if (item.photo2 != null)
                            {
                                <div class="carousel-item text-center">
                                            <img src="~/Content/imgProducts/@item.photo2" class="img-table carImg" alt="Immagine carosello">
                                </div>
                            }
                            @if (item.photo3 != null)
                            {
                                <div class="carousel-item text-center">
                                            <img src="~/Content/imgProducts/@item.photo3" class="img-table carImg" alt="Immagine carosello">
                                </div>
                            }
                            @if (item.photo4 != null)
                            {
                                <div class="carousel-item text-center">
                                            <img src="~/Content/imgProducts/@item.photo4" class="img-table carImg" alt="Immagine carosello">
                                </div>
                            }
                            @if (item.photo5 != null)
                            {
                                <div class="carousel-item text-center">
                                            <img src="~/Content/imgProducts/@item.photo5" class="img-table carImg" alt="Immagine carosello">
                                </div>
                            }
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselIndex_@item.id" data-bs-slide="prev">
                            <span><i class="fa-solid fa-chevron-left"></i></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselIndex_@item.id" data-bs-slide="next">
                            <span><i class="fa-solid fa-chevron-right"></i></span>
                            <span class="visually-hidden">Next</span>
                        </button>

                    </div>
                </td>

            </tr>
        }
    </table>
    </div>